{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "sourceMap": false,
    "baseUrl": "./",
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": ["lib/**/*", "sample/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
